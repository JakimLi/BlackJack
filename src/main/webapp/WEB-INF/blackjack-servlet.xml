<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
  http://www.springframework.org/schema/mvc    http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
  http://www.springframework.org/schema/context    http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:component-scan base-package="blackjack.controller"/>
    <mvc:annotation-driven/>

    <bean id="dealer" class="blackjack.dealer.Dealer"/>
    <bean id="cetera" class="blackjack.player.Player"/>
    <bean id="house" class="blackjack.player.Player"/>
    
    <bean id="table" class="blackjack.controller.Table">
        <property name="dealer" ref="dealer"/>
        <property name="cetera" ref="cetera"/>
        <property name="house" ref="house"/>
    </bean>
</beans>
